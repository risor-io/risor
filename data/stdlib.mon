//
// Convert the given string to upper-case.
//
function string.toupper() {
   let r = "";

   foreach char in self {
      if ( char >= "a" && char <= "z" ) {
           char = char.ord();
           char -= 32;
           char = char.chr();
      }

      r += char;
   }

   return r;
}

