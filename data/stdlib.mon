//
// The rest of an array - i.e. all elements EXCEPT the first
//
function rest( array ) {
  let result = [];

  if ( len(array) > 1 ) {
    let i = 1;
    for( i < len(array) ) {
      result = push(result, array[i]);
      i++;
    }
   }
   return result;
}

