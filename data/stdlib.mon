//
// Convert the given string to lower-case.
//
function string.tolower() {
   let r = "";

   foreach char in self {
      if ( char >= "A" && char <= "Z" ) {
           char = char.ord();
           char += 32;
           char = char.chr();
      }
      r += char;
   }

   return r;
}

